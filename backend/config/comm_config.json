{
  "communication": {
    "providers": {
      "email": {
        "enabled": true,
        "smtp": {
          "server": "${SMTP_SERVER}",
          "port": "${SMTP_PORT}",
          "username": "${SMTP_USERNAME}",
          "password": "${SMTP_PASSWORD}",
          "default_recipient": "${SMTP_DEFAULT_RECIPIENT}"
        }
      },
      "api_config": {
        "coingecko_api_enabled":    "ENABLE",
        "coinmarketcap_api_enabled":"ENABLE",
        "coinpaprika_api_enabled":  "ENABLE",
        "binance_api_enabled":      "DISABLE",
        "cryptocompare_api_enabled":"ENABLE",
        "nomics_api_enabled":       "ENABLE"
      },
      "sms": {
        "enabled": true,
        "carrier_gateway": "txt.att.net",
        "default_recipient": "6199804758"
      },
      "twilio": {
        "enabled": true,
        "account_sid": "${TWILIO_ACCOUNT_SID}",
        "auth_token": "${TWILIO_AUTH_TOKEN}",
        "default_to_phone": "${MY_PHONE_NUMBER}",
        "default_from_phone": "${TWILIO_PHONE_NUMBER}"
      },
      "tts": {
        "enabled": true,
        "voice": "Hazel",
        "speed": 140
      }
    },
    "defaults": {
      "log": {
        "enabled": true,
        "level": "DEBUG",
        "console_output": true,
        "log_file": "${ALERT_MONITOR_LOG_PATH}"
      },
      "database": {
        "path": "${DB_PATH}"
      },
      "monitoring": {
        "price_monitor_enabled": true,
        "alert_monitor_enabled": true,
        "sonic_monitor_loop_time": 300,
        "last_price_update_time": null
      }
    }
  },
  "voice_profiles": {
    "default": {
      "engine": "twilio",
      "twilio_voice": "Polly.Joanna",
      "twilio_language": "en-US",
      "tts_voice_name": "Microsoft Zira Desktop",
      "tts_rate": 1.0,
      "tts_volume": 1.0,
      "prefix": "This is Sonic.",
      "suffix": "Please check your positions."
    }
  },
  "api": {
    "coingecko": {
      "enabled": true
    },
    "kucoin": {
      "enabled": true
    },
    "coinmarketcap": {
      "enabled": true,
      "api_key": "${COINMARKETCAP_API_KEY}"
    },
    "coinpaprika": {
      "enabled": true
    },
    "binance": {
      "enabled": false
    }
  }
}
