{
  "$id": "schema/Portfolio.json",
  "type": "object",
  "required": [
    "balances",
    "positions"
  ],
  "properties": {
    "balances": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "mint",
          "amount",
          "decimals"
        ],
        "properties": {
          "mint": {
            "type": "string"
          },
          "amount": {
            "type": "string",
            "description": "raw atoms as string"
          },
          "decimals": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "positions": {
      "$ref": "Positions.json"
    }
  },
  "examples": [
    {
      "balances": [
        {
          "mint": "So11111111111111111111111111111111111111112",
          "amount": "42500000000",
          "decimals": 9
        }
      ],
      "positions": {
        "items": [
          {
            "symbol": "SOL",
            "side": "long",
            "sizeUsd": 125.5,
            "entryPrice": 155.12,
            "metadata": {
              "note": "example position"
            }
          }
        ],
        "count": 1
      }
    }
  ]
}
