{
  "$id": "schema/MonitorStatus.json",
  "type": "object",
  "required": [
    "status",
    "timestamp"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "degraded",
        "error"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "details": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "examples": [
    {
      "status": "ok",
      "timestamp": "2025-09-19T18:26:41Z",
      "details": {
        "monitors": {
          "portfolio": "ok",
          "alerts": "ok"
        }
      }
    }
  ]
}
