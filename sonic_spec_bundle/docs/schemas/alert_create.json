{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/alert_create.json",
  "title": "AlertCreate",
  "type": "object",
  "required": [
    "channel",
    "message"
  ],
  "properties": {
    "channel": {
      "type": "string",
      "enum": [
        "email",
        "sms",
        "webhook",
        "console"
      ]
    },
    "message": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "warn",
        "error"
      ],
      "default": "info"
    }
  }
}